<div class="row">
  <div class="span6">
    <dl class="dl-horizontal">
      <dt><b>Summoner name:</b></dt>
      <dd><%= @player.summoner_name %></dd>

      <dt><b>Summoner ID:</b></dt>
      <dd><%= @player.summoner_id %></dd>
      
      <dt><b>Account ID:</b></dt>
      <dd><%= @player.account_id %></dd>
    </dl>
  </div>
  
  <div class="span6">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Game ID</th>
          <th>Champion</th>
          <th>Date</th>
        </tr>
      <tbody>
        <% @player.game_statistics.each do |game_stat| %>
          <tr>
            <td><%= link_to game_stat.game_id, game_stat %></td>
            <td><%= champion_name(game_stat.champion_id) %></td>
            <td><%= time_ago_in_words(game_stat.game.create_date.to_time) %></td>
          </tr>
      <% end %>
    </table>
  </div>
</div>
<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>
