<%= form_for @player, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Player</legend>
    
    <div class="control-group">
      <%= f.label :summoner_name, :class => 'control-label' %>
      <div class="controls">
         <%= f.text_field :summoner_name, :class => 'text_field' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :summoner_id, :class => 'control-label' %>
      <div class="controls">
         <%= f.text_field :summoner_id, :class => 'text_field' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :account_id, :class => 'control-label' %>
      <div class="controls">
         <%= f.text_field :account_id, :class => 'text_field' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :region, :class => 'control-label' %>
      <div class="controls">
         <%= f.text_field :region, :class => 'text_field' %>
      </div>
    </div>
    
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', players_path, :class => 'btn' %>
    </div>

  </fieldset>
<% end %>
